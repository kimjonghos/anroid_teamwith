<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hkTeamInfoLayOut"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/hkivTeamLayoutTeamPic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/team10" />


    <TextView
        android:id="@+id/hkTeamLayoutProjectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="프로젝트 명"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/hktvTeamLayoutTeamName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:text="팀이름"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/hktvTeamLayoutProejctCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:text="분야"
        android:textAlignment="center" />
</LinearLayout>

