<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="지원 분야 : " />

        <TextView
            android:id="@+id/hktvRecruitRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="개발자" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvInterviewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="간단 면접" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvInterviewTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q1 : " />

        <TextView
            android:id="@+id/tvInterviewQuestion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="인터뷰 질문입니다?" />
    </LinearLayout>

    <EditText
        android:id="@+id/etInterviewAnswer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvInterviewTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Q2 : " />

        <TextView
            android:id="@+id/tvInterviewQuestion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="InterviewQuestion2입니다:?" />
    </LinearLayout>

    <EditText
        android:id="@+id/etInterviewAnswer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvInterviewTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q3 : " />

        <TextView
            android:id="@+id/tvInterviewQuestion3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="interviewQuestion3입니다?" />
    </LinearLayout>

    <EditText
        android:id="@+id/etInterviewAnswer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="하고 싶은 말" />

    <EditText
        android:id="@+id/hketFreewriting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/hkBtnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/filled_button"
            android:text="지원"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/hkBtnApplyCancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="70dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="취소"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>